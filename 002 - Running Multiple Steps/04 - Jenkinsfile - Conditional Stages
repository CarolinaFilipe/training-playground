pipeline {
    agent any
	
	parameters {	
		choice(name: 'TOEXECUTE', choices: ['build', 'test'], description: 'TOEXECUTE')
	}
	
    stages {
    	stage ('build') {
		when {
			environment name: 'TOEXECUTE', value: 'build'
		}
		steps {
		echo "executing the build stage"
		}
    		}
	stage ('test') {
		when {
			environment name: 'TOEXECUTE', value: 'test'
		}
		steps {
		echo "executing the build stage"
		}
    		}
    }
}
